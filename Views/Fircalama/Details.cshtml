@model DisSagligiTakip.Entities.FircalamaKaydi

@{
    ViewData["Title"] = "Fırçalama Detayları";
}

<h2 class="mt-4">📋 Fırçalama Kaydı Detayları</h2>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title text-primary">🗓️ Tarih: @Model.Tarih.ToString("dd MMMM yyyy - HH:mm")</h5>

        <p class="card-text mt-3">
            <strong>📝 Açıklama:</strong><br />
            @Model.Aciklama
        </p>

        @if (!string.IsNullOrEmpty(Model.GorselYolu))
        {
            <div class="mt-3">
                <strong>🖼️ Görsel:</strong><br />
                <img src="@Model.GorselYolu" alt="Fırçalama Görseli" class="img-fluid rounded shadow-sm" style="max-width: 400px;" />
            </div>
        }

        <div class="mt-4 text-muted">
            <small>Kullanıcı ID: @Model.UserId</small>
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">← Geri Dön</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">✏️ Düzenle</a>
<form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
    <button type="submit" class="btn btn-danger" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">🗑️ Sil</button>
</form>
