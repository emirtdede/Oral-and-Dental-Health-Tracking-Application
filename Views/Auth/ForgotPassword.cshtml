@model DisSagligiTakip.DTOs.ForgotPasswordDTO
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">🔐 Şifremi Unuttum</h2>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <form asp-action="ForgotPassword" method="post" novalidate>
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email">E-Posta Adresi</label>
                    <input asp-for="Email" class="form-control" placeholder="ornek@eposta.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning w-100">📨 Sıfırlama Bağlantısı Gönder</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
