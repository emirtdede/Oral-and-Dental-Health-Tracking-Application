@model DisSagligiTakip.DTOs.ResetPasswordDTO
@{
    ViewData["Title"] = "Yeni Şifre Belirle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">🔁 Yeni Şifre Belirle</h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            <form asp-action="ResetPassword" method="post" novalidate>
                <input type="hidden" asp-for="UserId" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="NewPassword">Yeni Şifre</label>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword">Şifreyi Onayla</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">✅ Şifreyi Güncelle</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
