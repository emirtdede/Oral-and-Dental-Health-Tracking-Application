@model DisSagligiTakip.Models.NoteViewModel

@{
    ViewData["Title"] = "Yeni Not Oluştur";
}

<h2 class="mt-4">📝 Yeni Not Oluştur</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Baslik" class="form-label">Başlık</label>
        <input asp-for="Baslik" class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Icerik" class="form-label">İçerik</label>
        <textarea asp-for="Icerik" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Icerik" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Gorsel" class="form-label">Görsel (isteğe bağlı)</label>
        <input asp-for="Gorsel" type="file" class="form-control" accept="image/*" />
        <span asp-validation-for="Gorsel" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
