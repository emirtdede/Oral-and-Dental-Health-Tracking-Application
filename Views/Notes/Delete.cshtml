@model DisSagligiTakip.Entities.Note

@{
    ViewData["Title"] = "Notu Sil";
}

<h2 class="mt-4 text-danger">🗑️ Notu Sil</h2>

<div class="alert alert-warning">
    <strong>Dikkat!</strong> Bu notu silmek üzeresiniz. Bu işlem geri alınamaz. Emin misiniz?
</div>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">@Model.Baslik</h4>
        <p class="card-text">@Model.Icerik</p>

        @if (!string.IsNullOrEmpty(Model.GorselYolu))
        {
            <div class="mt-3">
                <label class="form-label fw-bold">Görsel:</label><br />
                <img src="@Model.GorselYolu" alt="Not Görseli" class="img-fluid rounded" style="max-width: 400px;" />
            </div>
        }

        <div class="mt-4 text-muted">
            <small>Oluşturulma Tarihi: @Model.Tarih.ToString("dd MMMM yyyy - HH:mm")</small>
        </div>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>
