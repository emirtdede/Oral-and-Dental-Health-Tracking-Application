@model DisSagligiTakip.Models.DisSagligiVerisiCreateVM
@{
    ViewData["Title"] = "Diş Sağlığı Kaydını Düzenle";
}

<h2 class="mt-4">✏️ Diş Sağlığı Kaydını Düzenle</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" novalidate>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="MevcutGorselYolu" />

    <div asp-validation-summary="All" class="text-danger"></div>

    @if (!User.IsInRole("Patient"))
    {
        <div class="mb-3">
            <label asp-for="HastaUserId" class="form-label">Hasta</label>
            <select asp-for="HastaUserId" asp-items="Model.Hastalar" class="form-select">
                <option value="">— Hasta seçin (opsiyonel) —</option>
            </select>
            <span asp-validation-for="HastaUserId" class="text-danger"></span>
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Diş Hekimi</label>
        <select asp-for="DisHekimiAdi" asp-items="Model.Doktorlar" class="form-select">
            <option value="">— Doktor seçin veya aşağıya yazın —</option>
        </select>
        <input asp-for="DisHekimiAdi" class="form-control mt-2" placeholder="Listede yoksa buraya yazın" />
        <span asp-validation-for="DisHekimiAdi" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Aciklama" class="form-label">Açıklama</label>
        <textarea asp-for="Aciklama" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label class="form-label">Mevcut Görsel</label><br />
        @if (!string.IsNullOrWhiteSpace(Model.MevcutGorselYolu))
        {
            <img src="@Model.MevcutGorselYolu" alt="Mevcut görsel" class="img-thumbnail mb-2" style="max-width:280px" />
        }
        else
        {
            <div class="text-muted">Görsel yok.</div>
        }
    </div>

    <div class="mb-3">
        <label asp-for="Gorsel" class="form-label">Yeni Görsel (opsiyonel)</label>
        <input asp-for="Gorsel" type="file" class="form-control" accept="image/*" />
        <span asp-validation-for="Gorsel" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
