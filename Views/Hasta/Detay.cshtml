@model DisSagligiTakip.ViewModels.HastaDetayViewModel
@{
    ViewData["Title"] = "Hasta Detayı";
}

<h2 class="mt-3">Hasta: @Model.Hasta.FullName</h2>
<p class="text-muted mb-3">@Model.Hasta.Email</p>

<div class="mb-3">
    <a class="btn btn-success"
       asp-controller="DisSagligi"
       asp-action="Create"
       asp-route-hastaUserId="@Model.Hasta.Id">+ Yeni Kayıt</a>
</div>

@if (!Model.DisKayitlari.Any())
{
    <div class="alert alert-info">Bu hastaya ait kayıt bulunamadı.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Açıklama</th>
                <th>Diş Hekimi</th>
                <th>Görsel</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var k in Model.DisKayitlari)
            {
                <tr>
                    <td>@k.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@k.Aciklama</td>
                    <td>@k.DisHekimiAdi</td>
                    <td>
                        @if (!string.IsNullOrEmpty(k.GorselYolu))
                        {
                            <img src="@k.GorselYolu" style="max-width:120px" class="img-thumbnail" />
                        }
                    </td>
                    <td class="text-end">
                        <a asp-controller="DisSagligi" asp-action="Edit" asp-route-id="@k.Id" class="btn btn-sm btn-primary">Düzenle</a>
                        <form asp-controller="DisSagligi" asp-action="Delete" asp-route-id="@k.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Silinsin mi?');">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
